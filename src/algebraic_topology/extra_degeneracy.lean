/-- When `[has_zero X]`, the shift of a map `f : fin (n+1) ‚Üí X`
is a map `fin (n+2) ‚Üí X` which sends `0` to `0` and `i.succ` to `f i`. -/
def shift_fn {n : ‚Ñï} {X : Type*} [has_zero X] (f : fin (n+1) ‚Üí X) (i : fin (n+2)) : X :=
dite (i = 0) (Œª h, 0) (Œª h, f (i.pred h))

@[simp]
lemma shift_fn_0 {n : ‚Ñï} {X : Type*} [has_zero X] (f : fin (n+1) ‚Üí X) : shift_fn f 0 = 0 := rfl

@[simp]
lemma shift_fn_succ {n : ‚Ñï} {X : Type*} [has_zero X] (f : fin (n+1) ‚Üí X)
  (i : fin (n+1)) : shift_fn f i.succ = f i :=
begin
  dsimp [shift_fn],
  split_ifs,
  { exfalso,
    simpa only [fin.ext_iff, fin.coe_succ] using h, },
  { simp only [fin.pred_succ], },
end

/-- The shift of a morphism `f : [n] ‚Üí Œî` in `simplex_category` corresponds to
the monotone map which sends `0` to `0` and `i.succ` to `f.to_order_hom i`. -/
@[simp]
def shift {n : ‚Ñï} {Œî : simplex_category} (f : [n] ‚ü∂ Œî) : [n+1] ‚ü∂ Œî := simplex_category.hom.mk
{ to_fun := shift_fn f.to_order_hom,
  monotone' := Œª i‚ÇÅ i‚ÇÇ hi, begin
    by_cases h‚ÇÅ : i‚ÇÅ = 0,
    { subst h‚ÇÅ,
      simp only [shift_fn_0, fin.zero_le], },
    { have h‚ÇÇ : i‚ÇÇ ‚â† 0 := by { intro h‚ÇÇ, subst h‚ÇÇ, exact h‚ÇÅ (le_antisymm hi (fin.zero_le _)), },
      cases fin.eq_succ_of_ne_zero h‚ÇÅ with j‚ÇÅ hj‚ÇÅ,
      cases fin.eq_succ_of_ne_zero h‚ÇÇ with j‚ÇÇ hj‚ÇÇ,
      substs hj‚ÇÅ hj‚ÇÇ,
      simpa only [shift_fn_succ] using f.to_order_hom.monotone (fin.succ_le_succ_iff.mp hi), },
  end, }

