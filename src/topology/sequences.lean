variables [uniform_space Œ≤] {s : set Œ≤}

lemma is_seq_compact.exists_tendsto_of_frequently_mem (hs : is_seq_compact s) {u : ‚Ñï ‚Üí Œ≤}
  (hu : ‚àÉ·∂† n in at_top, u n ‚àà s) (huc : cauchy_seq u) :
  ‚àÉ x ‚àà s, u ‚ü∂ x :=
begin
  rcases hs.subseq_of_frequently_in hu with ‚ü®x, hxs, œÜ, œÜ_mono, hx‚ü©,
  refine ‚ü®x, hxs, le_nhds_of_cauchy_adhp huc ((cluster_pt.of_le_nhds hx).mono _)‚ü©,
  rw [‚Üê filter.map_map],
  exact map_mono œÜ_mono.tendsto_at_top
