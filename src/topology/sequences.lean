  (huc : cauchy_seq u) : ‚àÉ x ‚àà s, u ‚ü∂ x :=
hs.exists_tendsto_of_frequently_mem (frequently_of_forall hu) huc

/-- A sequentially compact set in a uniform space is totally bounded. -/
