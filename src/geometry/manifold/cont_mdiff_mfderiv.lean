/-- Characterization of continuous functions into a fiber bundle. -/
lemma continuous_within_at_total_space (f : X ‚Üí total_space E) {s : set X} {x‚ÇÄ : X} :
  continuous_within_at f s x‚ÇÄ ‚Üî
  continuous_within_at (Œª x, (f x).proj) s x‚ÇÄ ‚àß
  continuous_within_at (Œª x, ((trivialization_at F E (f x‚ÇÄ).proj) (f x)).2) s x‚ÇÄ :=
begin
  refine (and_iff_right_iff_imp.2 $ Œª hf, _).symm.trans (and_congr_right $ Œª hf, _),
  { refine (continuous_proj F E).continuous_within_at.comp hf (maps_to_image f s) },
  have h1 : (Œª x, (f x).proj) ‚Åª¬π' (trivialization_at F E (f x‚ÇÄ).proj).base_set ‚àà ùìù[s] x‚ÇÄ :=
    hf.preimage_mem_nhds_within ((open_base_set _).mem_nhds (mem_base_set_trivialization_at F E _)),
  have h2 : continuous_within_at (Œª x, (trivialization_at F E (f x‚ÇÄ).proj (f x)).1) s x‚ÇÄ,
  { refine hf.congr_of_eventually_eq (eventually_of_mem h1 $ Œª x hx, _) trivialization_at_proj_fst,
    rw [coe_fst'],
    exact hx },
  rw [(trivialization_at F E (f x‚ÇÄ).proj).continuous_within_at_iff_continuous_within_at_comp_left],
  { simp_rw [continuous_within_at_prod_iff, function.comp, trivialization.coe_coe, h2, true_and] },
  { apply mem_trivialization_at_proj_source },
  { rwa [source_eq, preimage_preimage] }
end

/-- Characterization of continuous functions into a fiber bundle. -/
lemma continuous_at_total_space (f : X ‚Üí total_space E) {x‚ÇÄ : X} :
  continuous_at f x‚ÇÄ ‚Üî continuous_at (Œª x, (f x).proj) x‚ÇÄ ‚àß
  continuous_at (Œª x, ((trivialization_at F E (f x‚ÇÄ).proj) (f x)).2) x‚ÇÄ :=
by { simp_rw [‚Üê continuous_within_at_univ], exact continuous_within_at_total_space F f }

